    "author": "Oluwamayowa Fadairo",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/OluwmayowaF/Teamwork/issues"
    },
    "homepage": "https://github.com/OluwmayowaF/Teamwork#readme",
    "dependencies": {
        "body-parser": "^1.19.0",
        "coveralls": "^3.0.7",
        "cross-env": "^6.0.3",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "istanbul": "^0.4.5",
        "make-runnable": "^1.3.6",
        "mocha-lcov-reporter": "^1.3.0",
        "morgan": "^1.9.1",
